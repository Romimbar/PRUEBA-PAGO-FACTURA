<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradiente desde 180° -->
    <item>
        <shape>
            <gradient
                android:startColor="#00FFFFFF"
                android:endColor="#424040"
                android:angle="180"/>
        </shape>
    </item>
    <!-- Gradiente desde 90° -->
    <item>
        <shape>
            <gradient
                android:startColor="#00FFFFFF"
                android:endColor="#424040"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>